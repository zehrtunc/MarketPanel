@model MarketPanel.Models.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="/Purple/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/Purple/assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="/Purple/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="/Purple/assets/vendors/font-awesome/css/font-awesome.min.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="/Purple/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="/Purple/assets/images/favicon.png">
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left pt-2 pb-5 px-5 ">
                            <div class="brand-logo d-flex justify-content-center mb-0">
                                <img src="/Purple/assets/images/Logo.svg" style="height: 250px; width: auto;">
                            </div>
                            <h4>Merhaba!</h4>
                            <h6 class="font-weight-light">Giriş için bilgileri doldurun</h6>
                            <form class="pt-3" asp-action="Login" asp-controller="Account" method="post">
                                <div class="form-group">
                                    <input  asp-for="Email" type="email" type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifre">
                                </div>
                                <div class="mt-3 d-grid gap-2">
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Giriş</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Hesabınız yok mu? <a href="/Account/Register" class="text-primary">Hesap Oluşturun</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/Purple/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/Purple/assets/js/off-canvas.js"></script>
    <script src="/Purple/assets/js/misc.js"></script>
    <script src="/Purple/assets/js/settings.js"></script>
    <script src="/Purple/assets/js/todolist.js"></script>
    <script src="/Purple/assets/js/jquery.cookie.js"></script>
    <!-- endinject -->

</body>
</html>