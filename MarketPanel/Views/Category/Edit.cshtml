@model MarketPanel.Models.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Edit";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />


<h2>Kategori Düzenle</h2>

<form asp-action="Edit" asp-controller="Category" method="post">
    <div class="col-3">
        <label class="form-label" for="name">Ürün İsmi</label>
        <input asp-for="Name" class="form-control" id="name" />
        </divclass>
        <div>
            <input asp-for="Id" type="hidden" name="id" />
        </div>
        <button type="submit" class="btn btn-warning">Düzenle</button>
</form>

