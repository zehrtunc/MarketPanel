@model List<MarketPanel.Models.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "MyCategories";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container card">
    <div class="d-flex justify-content-between align-items-center m-3 mb-3">
        <h2>Kategorilerim</h2>
        <a href="/Category/Add" class="btn btn-gradient-primary">+ Kategori Ekle</a>
    </div>

    <table class="table">
        <thead class="table-light">
            <tr>
                <th style="width: 50%;">Kategori İsmi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a href="/Category/Edit/@category.Id" class="btn btn-gradient-warning">Düzenle</a>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-controller="Category" method="post">
                            <input value="@category.Id" type="hidden" name="id"/>
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
