@model MarketPanel.Models.ViewModels.ProductViewModel


@{
    ViewData["Title"] = "Add";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="contaniner d-flex justify-content-center" >
    <div class="card p-4 w-100" style="max-width: 600px;">
        <h2>Ürün Ekleme</h2>
        <form asp-action="Add" asp-controller="Product" method="post" class="row">
            <div class="mb-3">
                <label for="name" class="form-label">Ürün İsmi</label>
                <input asp-for="Name" type="text" class="form-control" id="name">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Ürün Fiyatı</label>
                <input asp-for="Price" type="text" class="form-control" id="price">
            </div>
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Kategori</label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                    <option value="">-- Select a category --</option>
                </select>
            </div>
            <button type="submit" class="btn btn-gradient-primary w-100">Ekle</button>
        </form>
    </div>
</div>




