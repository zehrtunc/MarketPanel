@model List<MarketPanel.Models.ViewModels.ProductListViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>My Products</h2>
            <a href="/Product/Add" class="btn btn-success">+ Ürün Ekle</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th style="width: 30%;">Ürün İsmi</th>
                    <th style="width: 20%;">Fiyat</th>
                    <th style="width: 20%;">Kategori</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>@product.CategoryName</td> 

                        <a href="/Product/Edit" class="btn btn-warning">Düzenle</a>
                        <a href="/Product/Delete" class="btn btn-danger">Sil</a>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>