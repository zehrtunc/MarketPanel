@model MarketPanel.Models.ViewModels.SaleDocumentAddViewModel

@{
    ViewData["Title"] = "Add";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />



<h2>Satış Evrağı Ekleme</h2>


<div class="contaniner mt-4 my-auto mx-5">
    <form asp-action="Add" asp-controller="SaleDocument" method="post" class="row">
        <div class="mb-3 col-6">
            <label for="description" class="form-label">Açıklama giriniz</label>
            <input asp-for="Description" type="text" class="form-control" id="description">
        </div>
        <div class="mb-3 col-6">
            
            @foreach (var id in Model.SaleItemIds)
            {
                <input type="hidden" name="SaleItemIds" value="@id"/>
            }

        </div>
        <button type="submit" class="btn btn-primary  col-9">Ekle</button>
    </form>
</div>
