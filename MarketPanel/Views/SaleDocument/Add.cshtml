@model MarketPanel.Models.ViewModels.SaleDocumentAddViewModel

@{
    ViewData["Title"] = "Add";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />



<div class="contaniner">
    <h2>Satış Evrağı Ekleme</h2>
    <form asp-action="Add" asp-controller="SaleDocument" method="post">
        <div class="mb-3 col-3">
            <label for="description" class="form-label">Açıklama giriniz</label>
            <textarea asp-for="Description" type="text" class="form-control" id="description" rows="1" style="overflow:auto;"></textarea>
        </div>
        <div class="mb-3">

            @foreach (var id in Model.SaleItemIds)
            {
                <input type="hidden" name="SaleItemIds" value="@id" />
            }

        </div>
        <button type="submit" class="btn btn-gradient-primary">Ekle</button>
    </form>
</div>
