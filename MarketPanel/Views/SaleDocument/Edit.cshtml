@model MarketPanel.Models.ViewModels.SaleDocumentViewModel
@{
    ViewData["Title"] = "Edit";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />


<h2>Satış Evrağı Düzenle</h2>


<div class="container my-auto">
    <form asp-action="Edit" asp-controller="SaleDocument" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TotalAmount" class="form-label">Toplam</label>
            <input asp-for="TotalAmount" class="form-control" />
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="InsertDate" class="form-label">Oluşturulma Tarihi</label>
            <input asp-for="InsertDate" class="form-control" />
            <span asp-validation-for="InsertDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="MySaleDocuments" class="btn btn-secondary">Cancel</a>
    </form>


